#!/usr/bin/env bash
# Configure /etc/hosts for localhost and facebook.com

# Backup
sudo cp /etc/hosts /etc/hosts.bak

# Remove old entries
sudo sed -i.bak '/localhost/d' /etc/hosts 2>/dev/null || sudo sed -i '' '/localhost/d' /etc/hosts
sudo sed -i.bak '/facebook.com/d' /etc/hosts 2>/dev/null || sudo sed -i '' '/facebook.com/d' /etc/hosts

# Add new entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
